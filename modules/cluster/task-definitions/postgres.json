[
  {
    "name": "${container_name}",
    "image": "${image}",
    "memory": 128,
    "essential": true,
    "environment": [
      {
        "name": "POSTGRES_DB",
        "value": "${odoo_postgres_db}"
      },
      {
        "name": "POSTGRES_PASSWORD",
        "value": "${odoo_postgres_password}"
      },
      {
        "name": "POSTGRES_USER",
        "value": "${odoo_postgres_user}"
      },
      {
        "name": "POSTGRES_USER",
        "value": "${odoo_postgres_user}"
      },
      {
        "name": "PGDATA",
        "value": "/var/lib/postgresql/data/pgdata"
      }
    ],
    "mountPoints": [
      {
        "SourceVolume": "content",
        "ContainerPath": "/var/lib/postgresql/data/pgdata"
      }
    ]
  }
]
