[
  {
    "name": "${container_name}",
    "image": "${image}",
    "memory": 128,
    "memoryReservation": 64,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80
      },
      {
        "containerPort": 443,
        "hostPort": 443
      }
    ],
    "environment":[
      {
        "name": "TZ",
        "value": "Europe/Madrid"
      },
      {
        "name": "LETSENCRYPT",
        "value": "true"
      },
      {
        "name": "LE_EMAIL",
        "value": "${email}"
      },
      {
        "name": "LE_FQDN",
        "value": "${hosts}"
      }
    ],
    "mountPoints": [
      {
        "SourceVolume": "images",
        "ContainerPath": "/var/www/blog/images"
      },
      {
        "SourceVolume": "assets",
        "ContainerPath": "/var/www/blog/assets",
        "ReadOnly": true
      },
      {
        "SourceVolume": "nginx-conf",
        "ContainerPath": "/etc/nginx/nginx.conf"
      },
      {
        "SourceVolume": "nginx-service",
        "ContainerPath": "/etc/nginx/service.conf"
      },
      {
        "SourceVolume": "letsencrypt",
        "ContainerPath": "/etc/letsencrypt"
      },
      {
        "SourceVolume": "certs",
        "ContainerPath": "/etc/nginx/ssl"
      },
      {
        "SourceVolume": "logs",
        "ContainerPath": "/var/log/nginx/"
      }
    ]
  }
]
