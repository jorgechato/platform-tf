[
  {
    "name": "${container_name}",
    "image": "${image}",
    "memoryReservation": 128,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 2368,
        "hostPort": 2368
      }
    ],
    "environment": [
      {
        "name": "NODE_ENV",
        "value": "production"
      },
      {
        "name": "email",
        "value": "${email}"
      },
      {
        "name": "url",
        "value": "${url}"
      }
    ],
    "mountPoints": [
      {
        "SourceVolume": "content",
        "ContainerPath": "/var/lib/ghost/content"
      }
    ]
  }
]
