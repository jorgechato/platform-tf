[
  {
    "name": "${nginx_container_name}",
    "image": "${nginx_image}",
    "memory": 128,
    "memoryReservation": 64,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80
      },
      {
        "containerPort": 443,
        "hostPort": 443
      }
    ],
    "environment":[
      {
        "name": "TZ",
        "value": "Europe/Madrid"
      },
      {
        "name": "LETSENCRYPT",
        "value": "true"
      },
      {
        "name": "LE_EMAIL",
        "value": "${email}"
      },
      {
        "name": "LE_FQDN",
        "value": "${hosts}"
      }
    ],
    "mountPoints": [
      {
        "SourceVolume": "nginx",
        "ContainerPath": "/etc/nginx/service.conf"
      },
      {
        "SourceVolume": "certs",
        "ContainerPath": "/etc/nginx/certs"
      }
    ]
  }
]
